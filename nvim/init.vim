" Colorscheme
colorscheme smau

" Hybrid line numbering
set number
set relativenumber

" Folding
set foldmethod=manual
set nofoldenable

" Tabs
set smarttab
set expandtab

" Indentation
set autoindent
set smartindent

" Undo file
set undofile

" Use system-wide clipboard
set clipboard=unnamedplus

" Recognize filetype and indent accordingly
filetype plugin indent on
